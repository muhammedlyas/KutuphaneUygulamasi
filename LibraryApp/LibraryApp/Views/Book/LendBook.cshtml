@model LendBook
<link rel="stylesheet" href="~/css/site.css">

<!DOCTYPE html>
<html>
<head>
    <title>LendBook</title>
    <style>
        button[type="submit"] {
            background-color: orangered;
        }
    </style>
</head>
<body>
<div>
    <form asp-controller="Book" asp-action="LendBook" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="BookId" />
        
        <div>
            <label asp-for="BarrowName"> Borrower Name </label>
            <input asp-for="BarrowName"/>
        </div>
        <div>
            <label asp-for="BarrowSurname"> Borrower Surname </label>
            <input asp-for="BarrowSurname"/>
        </div>
        <div>
            <label asp-for="EndDate">Return Date</label>
            <input asp-for="EndDate"/>
        </div>
        <button type="submit"> Borrow </button>
    </form>
</div>
</body>
</html>
